<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongActivity">


    <ImageView
        android:id="@+id/song_player_setting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_setting"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_eq_off"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/song_player_setting" />

    <!-- 깃 테스트 -->
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/nugu_btn_down"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/song_player_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/song_player_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_player_title_tv"
        app:layout_constraintStart_toStartOf="@id/song_player_title_tv"
        app:layout_constraintEnd_toEndOf="@id/song_player_title_tv"/>

    <ImageView
        android:id="@+id/player_arrow_more"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/btn_main_arrow_more"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/song_player_title_tv"
        app:layout_constraintStart_toEndOf="@id/song_player_singer_tv"/>

    <ImageView
        android:id="@+id/player_album_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/img_album_exp2"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_player_singer_tv" />

    <TextView
        android:id="@+id/player_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나리는 꽃가루에\n눈이 따끔해 아야"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/player_album_img"
        app:layout_constraintStart_toStartOf="@id/player_album_img"
        app:layout_constraintEnd_toEndOf="@id/player_album_img"/>

    <ImageView
        android:id="@+id/player_like_off"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/player_lyrics"
        app:layout_constraintStart_toStartOf="@id/player_lyrics" />

<!--    <ImageView-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:src="@drawable/"-->

</androidx.constraintlayout.widget.ConstraintLayout>